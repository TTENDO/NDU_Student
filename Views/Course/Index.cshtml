@model NDU_Student.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Courses";
}

<h3>@ViewData["Title"]</h3>

@if (!string.IsNullOrEmpty(Model?.ErrorMessage))
{
    <div class=" col-sm-6 no-padding">
        <div class="alert alert-danger alert-dismissible">
            <b>Error</b>
            <div class="row">
                <div class="col-sm-9">
                    @Model.ErrorMessage
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
}
@if (!string.IsNullOrEmpty(@Model?.SuccessMessage))
{
    <div class=" col-sm-6 no-padding">
        <div class="alert alert-success alert-dismissible">
            <b>Success</b>
            <div class="row">
                <div class="col-sm-9">
                    @Model.SuccessMessage
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
}

<div class="display-inline margin-bottom-10 pull-right">
    <a asp-action="Create" class="btn btn-info"
       title="Click to create new event type">
        <i class="glyphicon glyphicon-plus"></i>
        New Course
    </a>

</div>

<div class="clearfix"></div>
<div class="panel col-sm-12 no-padding filter-panel  form-control margin-bottom-10" id="accordion" title="Filter through event types">
    <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseOne"
         title="Click to collapse/expand filters" style="padding: 0px 10px;">
        <strong>Filters</strong>
        <div class="clearfix"></div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
        <div class="panel-body">
            <form asp-action="Index" method="get" class="form-control-sm">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="display-inline">
                            <div>
                                <label>Search Term</label>
                            </div>
                            <div>
                                <input type="text" asp-for="SearchTerm" maxlength="30" class="search-box form-control" />
                            </div>
                        </div>
                        <div class="display-inline filter-buttons">
                            <div><label></label></div>
                            <div>
                                <input type="submit" class="btn btn-primary" value="Search" />
                                @(" | ")
                                <a asp-action="Index" class="btn btn-info">Clear</a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>

@if (Model.CourseItems.Any())
{
    <div class="table-responsive">
        <partial name="Partials/_PartialIndex" />
    </div>
    <div class="clearfix"></div>
}

